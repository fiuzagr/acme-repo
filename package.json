{
  "name": "@acme/repo",
  "private": true,
  "packageManager": "^npm@9.2.0",
  "engines": {
    "node": ">=18.12.1"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "sites/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky install",
    "pre-commit": "turbo run lint:staged --continue"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "turbo": "latest"
  }
}
